- content_for :meta_title do
  == #{@cms_config['site_settings']['article_title'] ? @cms_config['site_settings']['article_title'].pluralize : "Articles"} by category:
  = h @article_category.name

= render :partial => "/shared/side_column"
= render :partial => "shared/slice", :locals => {:column_section_id => nil, :controller => "article_categories", :action => "show"}, :collection => @main_column_sections

