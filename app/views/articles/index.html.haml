- content_for :meta_title do
  - if !params[:tag].blank?
    = @cms_config['site_settings']['article_title'].pluralize
    ="by tag: #{h params[:tag]}"
  - elsif !params[:author].blank?
    = @cms_config['site_settings']['article_title'].pluralize
    ="by #{h @author.name}"
  - elsif !params[:month].blank? and !params[:year].blank?
    = @cms_config['site_settings']['article_title'].pluralize
    ="by month: #{month_name(params[:month].to_i)} #{params[:year]}"
  - else
    =@cms_config['site_settings']['blog_title']


- template = Liquid::Template.parse(@tmplate.articles_index)
= template.render( 'articles' => @articles, 'tag' => params[:tag], 'author' => (@author ? @author.name : nil), 'month' => (params[:month] ? "#{month_name(params[:month].to_i)} #{params[:year]}" : nil), 'blog_title' => @cms_config['site_settings']['blog_title'], 'articles_list' => (render :partial => "article_for_list", :collection => @articles) )

= render :partial => "shared/side_column"

- content_for :head do
  = "<link rel=\"alternate\" type=\"application/rss+xml\" title=\"#{@cms_config['website']['name']}\" href=\"/#{path_safe(@cms_config['site_settings']['article_title'])}.rss\" />"


- unless @articles.total_pages == 1
  = will_paginate @articles
  
